<Window x:Class="TwitchWatcher.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Twitch Channels" Height="420" Width="560"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox Width="240" Margin="0,0,8,0"
                     Text="{Binding NewLogin, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Enter channel login (e.g., shroud)"/>
            <Button Width="80" Margin="0,0,8,0" Content="Add"
                    Command="{Binding AddCommand}"/>
            <Button Width="120" Margin="0,0,8,0" Content="Remove Selected"
                    Command="{Binding RemoveCommand}"/>
            <Button Width="80" Content="Save" Command="{Binding SaveCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Channels}" SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Login" Binding="{Binding Login}" Width="*"/>
                <DataGridTextColumn Header="State" Binding="{Binding State}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>